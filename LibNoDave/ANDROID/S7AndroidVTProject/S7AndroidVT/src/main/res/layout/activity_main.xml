<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:paddingLeft="16dp"
                  android:paddingRight="16dp"
                  android:orientation="horizontal"
                  android:id="@+id/linearLayout"
                  android:background="@android:color/black">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PLC"
                android:id="@+id/btnPLC"
                android:background="@android:color/holo_purple"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/white"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info"
                android:id="@+id/btnInfo"
                android:background="@android:color/holo_purple"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/white"/>
        <Button
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read"
                android:id="@+id/btnRead"
                android:background="@android:color/holo_purple"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/white"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Write"
                android:id="@+id/btnWrite"
                android:background="@android:color/holo_purple"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/white"/>

     </LinearLayout>

    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:columnCount="3"
            android:rowCount="5"
            android:background="#010101"
            >


        <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/Mnemonics0"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@android:color/holo_blue_bright"
                android:layout_marginTop="5dp"/>
        <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text=""
                android:id="@+id/data0"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@android:color/white"
                android:layout_gravity="top"
                android:layout_marginTop="5dp"/>
        <EditText
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/force0"
                android:layout_row="0"
                android:layout_column="2"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="5dp"/>

        <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/Mnemonics1"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@android:color/holo_blue_bright"
                android:layout_marginTop="5dp"/>
        <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text=""
                android:id="@+id/data1"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@android:color/white"
                android:layout_gravity="top"
                android:layout_marginTop="5dp"/>
        <EditText
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/force1"
                android:layout_row="1"
                android:layout_column="2"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="5dp"/>

        <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/Mnemonics2"
                android:layout_row="2"
                android:layout_column="0"
                android:background="@android:color/holo_blue_bright"
                android:layout_marginTop="5dp"/>
        <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text=""
                android:id="@+id/data2"
                android:layout_row="2"
                android:layout_column="1"
                android:background="@android:color/white"
                android:layout_gravity="top"
                android:layout_marginTop="5dp"/>
        <EditText
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/force2"
                android:layout_row="2"
                android:layout_column="2"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="5dp"/>

        <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/Mnemonics3"
                android:layout_row="3"
                android:layout_column="0"
                android:background="@android:color/holo_blue_bright"
                android:layout_marginTop="5dp"/>
        <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text=""
                android:id="@+id/data3"
                android:layout_row="3"
                android:layout_column="1"
                android:background="@android:color/white"
                android:layout_gravity="top"
                android:layout_marginTop="5dp"/>
        <EditText
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/force3"
                android:layout_row="3"
                android:layout_column="2"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="5dp"/>

        <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/Mnemonics4"
                android:layout_row="4"
                android:layout_column="0"
                android:background="@android:color/holo_blue_bright"
                android:layout_marginTop="5dp"/>
        <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text=""
                android:id="@+id/data4"
                android:layout_row="4"
                android:layout_column="1"
                android:background="@android:color/white"
                android:layout_gravity="top"
                android:layout_marginTop="5dp"/>
        <EditText
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/force4"
                android:layout_row="4"
                android:layout_column="2"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="5dp"/>

    </GridLayout>


</RelativeLayout>
